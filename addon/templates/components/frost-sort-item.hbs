{{frost-select
  class=(concat css '-select')
  data=_availableProperties
  hook=(concat hookPrefix '-select')
  hookQualifiers=hookQualifiers
  renderTarget=selectOutlet
  selectedValue=_localValue
  onChange=(action 'changeProperty')
}}

{{frost-button
  class=(concat css '-direction' (if _descending ' descending'))
  hook=(concat hookPrefix '-direction')
  hookQualifiers=hookQualifiers
  size='small'
  priority='tertiary'
  icon='direction'
  pack='frost-sort'
  onClick=(action 'changeDirection')
}}
  {{!-- {{frost-icon
    class=(if _descending 'descending')
    hook=(concat hookPrefix '-direction-icon')
    hookQualifiers=hookQualifiers

  }} --}}

{{#unless hideRemove}}
  {{frost-button
    class=(concat css '-remove')
    hook=(concat hookPrefix '-remove')
    hookQualifiers=hookQualifiers
    priority='tertiary'
    size='small'
    icon='round-close'
    onClick=(action 'remove')
  }}
{{/unless}}
