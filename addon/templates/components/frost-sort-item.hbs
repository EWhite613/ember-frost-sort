{{frost-select
  data=sortItemList
  hook=(concat hook '-select')
  selectedValue=selectedItem
  onChange=(action 'select')}}
{{#frost-button
  class='direction-button'
  hook=(concat hook '-direction')
  size='small'
  priority='tertiary'
  onClick=(action 'rotate' sortId)}}
{{frost-icon
  class=(concat
    'animate'
    ' '
    (if (eq direction 'desc') 'desc')
  )
  pack='frost-sort'
  icon='direction'}}
{{/frost-button}}
{{#if hideRemoveButton}}
  {{#frost-button
    class='remove-button'
    hook=(concat hook '-remove')
    priority=''
    size='small'
    onClick=(action "removeItem" sortId)}}
    {{frost-icon pack='frost-sort' icon='close' }}
  {{/frost-button}}
{{/if}}
