{{#frost-button
  on-click=(action 'rotate' sortId)
  size='small'
  priority='tertiary'
  }}
  <div class="svg-icon animate {{if (eq direction 'desc') 'desc'}}">
    {{frost-icon icon='frost/sort-direction'}}
  </div>
{{/frost-button}}

{{frost-select
  id=sortId
  data=sortItemList
  on-change=(action 'select')
  selectedValue=selectedItem}}
